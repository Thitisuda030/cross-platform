<UI>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
        #ส่วนบน
            Spinner:
                id: spin_lang
                text:"please select"
                values:("python","php","html","sql")
                size_hint: (0.4,0.2)
                #pos_hint:{'x':0.2,'y':0.85} #Xนอน,Yตั้ง
                pos_hint:{'top':1}
            Label:
                id:lbl_output
                text: "you selected :{}".format(spin_lang.text)
                
        BoxLayout:
        #ส่วนล่าง
            Label:
                text: 'row1'
            TextInput:                 
                id:txt_input
            Button:
                id:btn_additem
                text:'add item' 
                on_press:root.add_item()       